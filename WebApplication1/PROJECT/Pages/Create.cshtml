@page
@model PROJECT.Pages.CreateModel
@{
}
<br/>
<h1>New Account</h1>
@if (Model.errorMsg.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>
            @Model.errorMsg
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">AccountNumber</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="accountnumber" value="@Model.acc.accountnumber">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">opendate </label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="opendate" value="@Model.acc.opendate">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">lasttxndate</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="lasttxndate" value="@Model.acc.lasttxndate">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Account Type</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="type" value="@Model.acc.type">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Account Balance</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="balance" value="@Model.acc.balance">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Branch Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="branch" value="@Model.acc.branch">
        </div>
    </div>



    @if (Model.successMsg.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>
            @Model.successMsg
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}



    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>